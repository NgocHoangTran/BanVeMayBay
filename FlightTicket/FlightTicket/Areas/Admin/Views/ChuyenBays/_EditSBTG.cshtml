@model FlightTicket.Models.ChiTietChuyenBay

@{
    Layout = null;
}



<!-- Modal Header -->
<div class="modal-header">
    <h4 class="modal-title">Sửa sân bay trung gian</h4>
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>

<!-- Modal body -->
<div class="modal-body">
    @using (Html.BeginForm("EditSBTG", "Chuyenbays", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">

            <input type="number" id="MaCB" class="form-control bg-gray-200" name="MaCB" readonly value="@Model.MaCB" style="display:none">

        </div>

        <div class="form-group">
            <label for="addName">Sân bay trung gian :</label>
            @Html.DropDownListFor(model => model.SanBayTrungGian, (SelectList)ViewBag.SanBayTrungGian, htmlAttributes: new { @class = "form-control", @id = "SanBayDi" })
        </div>
        <div class="form-group">
            <label asp-for="addUsername">Thời gian dừng :</label>
            <input type="number" id="addHV" class="form-control" name="ThoiGianDung" value="@Model.ThoiGianDung">
           
        </div>
        <div class="form-group">
            <label asp-for="addUsername">Thời gian dừng tối thiểu :</label>
            <input type="number" id="addHV" class="form-control" name="TGToiThieu" value="@Model.TGToiThieu">
            
        </div>
        <div class="form-group">
            <label asp-for="addUsername">Thời gian dừng tối đa :</label>
            <input type="number" id="addHV" class="form-control" name="TGToiDa" value="@Model.TGToiDa">
            
        </div>

        <div class="form-group">
            <label asp-for="addUsername">Ghi chú :</label>
            <input type="text" id="addHV" class="form-control" name="GhiChu" value="@Model.GhiChu">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        
        <button type="submit" class="btn btn-success">Save</button>
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
    }
</div>





