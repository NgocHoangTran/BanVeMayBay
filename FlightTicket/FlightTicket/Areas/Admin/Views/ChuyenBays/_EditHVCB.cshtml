@model FlightTicket.Models.HangVeCuaChuyenBay

@{
    Layout = null;
}



<!-- Modal Header -->
<div class="modal-header">
    <h4 class="modal-title">Sửa hạng vé chuyến bay</h4>
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>

<!-- Modal body -->
<div class="modal-body">
    @using (Html.BeginForm("EditHVCB", "Chuyenbays", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">

            <input type="number" id="MaCB" class="form-control bg-gray-200" name="MaCB" readonly value="@Model.MaCB" style="display:none">

        </div>

        <div class="form-group">
            <label for="addName">Hạng vé :</label>
            @Html.DropDownListFor(model => model.MaHangVe, (SelectList)ViewBag.HangVe, htmlAttributes: new { @class = "form-control", @id = "MaHangVe" })
        </div>
        <div class="form-group">
            <label asp-for="addUsername">Số lượng ghế :</label>
            <input type="number" id="addHV" class="form-control" name="Soluongghe" value="@Model.Soluongghe">

        </div>
        


        <button type="submit" class="btn btn-success">Save</button>
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
    }
</div>






