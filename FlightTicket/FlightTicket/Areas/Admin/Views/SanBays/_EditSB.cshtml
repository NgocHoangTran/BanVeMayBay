@model IEnumerable<FlightTicket.Models.SanBay>

@{
    Layout = null;
}



<!-- Modal Header -->
<div class="modal-header">
    <h4 class="modal-title">Sửa sân bay</h4>
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>

<!-- Modal body -->
<div class="modal-body">
    @using (Html.BeginForm("Edit", "SanBays", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        
        <div class="form-group">
            <label asp-for="addUsername">Mã sân bay :</label>
            <input type="text" id="addUsername" class="form-control bg-gray-200" name="MaSB" readonly value="@ViewBag.sanbay.MaSB">
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
       
        <div class="form-group">
            <label for="addName">Tên sân bay :</label>
            <input type="text" id="addName" class="form-control" name="TenSB" value="@ViewBag.sanbay.TenSB">
        </div>
        
        <button type="submit" class="btn btn-success">Save</button>
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
    }
</div>

