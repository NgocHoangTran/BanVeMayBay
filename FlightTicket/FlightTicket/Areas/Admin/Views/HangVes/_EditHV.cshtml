@model IEnumerable<FlightTicket.Models.HangVe>

@{
    Layout = null;
}



<!-- Modal Header -->
<div class="modal-header">
    <h4 class="modal-title">Sửa hạng vé</h4>
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>

<!-- Modal body -->
<div class="modal-body">
    @using (Html.BeginForm("Edit", "HangVes", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label asp-for="addUsername">Mã hạng vé :</label>
            <input type="number" id="addUsername" class="form-control bg-gray-200" name="MaHangVe" readonly value="@ViewBag.hangve.MaHangVe">
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="addName">Tên hạng vé :</label>
            <input type="text" id="addName" class="form-control" name="TenHangVe" value="@ViewBag.hangve.TenHangVe">
        </div>

        <button type="submit" class="btn btn-success">Save</button>
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
    }
</div>


